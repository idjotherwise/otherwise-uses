---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Body from '../components/Body.astro';
import { SITE_TITLE, SITE_DESCRIPTION, HOMEPAGE_URL } from '../config';
import Content from '../components/Content.astro';
import { IoArrowForward } from 'react-icons/io5';
import Masthead from '../components/Masthead.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<Body>
		<Header title={SITE_TITLE} />
		<main class="pt-[56px]">
      <Masthead/>

      <Content>
        <section>
          <p class="mb-8 indent-4">As a freelance developer, I&apos;ve been using lots of differnt types of equipment and software over the years. I'll list some stuff here.
            <a class="inline-flex items-center gap-1 indent-1 text-green-500" href={HOMEPAGE_URL}>Learn more about me<IoArrowForward className="inline" /></a>
          </p>
        </section>
      </Content>
		</main>
		<Footer />
	</Body>
</html>
